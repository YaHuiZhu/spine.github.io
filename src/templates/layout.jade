doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black")

		script(src="https://code.jquery.com/jquery-3.1.1.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")

		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
		link(rel="stylesheet", href="#{locals.url}/docs.css")
		title= locals.title
		block head
	body
		block header
			nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
				div.container
					div.navbar-header
						button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="https://github.com/spine/spine", title="Source on Github") Spine
						p.navbar-text#docVersion v!{locals.versionNum}
					div.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li: a(href="/") Home
							li: a(href="#{locals.url}/docs/") Documentation
							li: a(href="https://github.com/spine/spine") GitHub
		block content
		
		block footer
